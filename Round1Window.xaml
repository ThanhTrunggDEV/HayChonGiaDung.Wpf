<Window x:Class="HayChonGiaDung.Wpf.Round1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vòng 1 - Bàn Tay Vàng"
        WindowState="Maximized"
        Background="{StaticResource Surface}">
    <Window.Resources>
        <Storyboard x:Key="RevealStoryboard">
            <DoubleAnimation To="1" Duration="0:0:0.45"
                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                             From="0.8"/>
            <DoubleAnimation To="1" Duration="0:0:0.45"
                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                             From="0.8"/>
            <DoubleAnimation To="1" Duration="0:0:0.45"
                             Storyboard.TargetProperty="Opacity"
                             From="0"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel>
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                <TextBlock Text="Vòng 1: Bàn Tay Vàng" FontSize="30" FontWeight="Bold"/>
                <TextBlock x:Name="RoundProgText" Text="Câu 1/4" Opacity="0.85" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                    <TextBlock Text="💰 Xu:"/>
                    <TextBlock x:Name="CoinText" FontWeight="Bold" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                    <TextBlock Text="Thẻ:"/>
                    <TextBlock x:Name="CardText" FontWeight="Bold" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Đúng:"/>
                    <TextBlock x:Name="CorrectCount" FontWeight="Bold" Margin="4,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <!-- Main card -->
        <Border Grid.Row="1" Background="{StaticResource Card}" CornerRadius="18" Padding="20" Margin="0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: product info -->
                <StackPanel Grid.Column="0" Margin="0,0,18,0">
                    <TextBlock x:Name="ProductName" FontSize="26" FontWeight="SemiBold" TextWrapping="Wrap" />
                    <TextBlock Text="Mô tả" FontWeight="Bold" Margin="0,8,0,4"/>
                    <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ProductDesc" TextWrapping="Wrap" Opacity="0.9"/>
                    </ScrollViewer>

                    <Border CornerRadius="12" Background="#121C3C" Padding="10" Margin="0,12,0,0">
                        <Image x:Name="ProductImage" Height="280" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Border>
                </StackPanel>

                <!-- RIGHT: question & actions -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="520">
                    <TextBlock Text="GIÁ THẬT CAO HƠN HAY THẤP HƠN?" FontSize="18" Opacity="0.8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Question" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,4,0,12"/>

                    <Border Background="#202B4D" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Giá gợi ý" FontSize="16" Opacity="0.75" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ReferencePriceText" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Button x:Name="LowerButton" Content="Thấp hơn" Width="180" Height="70" FontSize="20" Margin="0,0,12,0" Click="LowerButton_Click"/>
                        <Button x:Name="HigherButton" Content="Cao hơn" Width="180" Height="70" FontSize="20" Click="HigherButton_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="RangeHint" FontSize="18" TextAlignment="Center" Margin="0,8,0,6"/>

                    <Separator Margin="0,6,0,6"/>
                    <TextBlock Text="Thẻ chiến thuật" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <UniformGrid Columns="3" Margin="0,8,0,0">
                        <Button x:Name="HintButton" Content="Gợi ý (-5 xu)" Margin="4" Click="HintButton_Click"/>
                        <Button x:Name="SwapButton" Content="Đổi sản phẩm (-8 xu)" Margin="4" Click="SwapButton_Click"/>
                        <Button x:Name="DoubleButton" Content="Nhân đôi thưởng (-10 xu)" Margin="4" Click="DoubleButton_Click"/>
                    </UniformGrid>

                    <TextBlock x:Name="Feedback" FontSize="18" TextAlignment="Center" Margin="0,16,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Kết thúc vòng" Click="Finish_Click"/>
        </StackPanel>
    </Grid>
</Window>
