<Window x:Class="HayChonGiaDung.Wpf.EndGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kết thúc" Height="300" Width="520" Background="{StaticResource Surface}">
  <Grid Margin="16">
    <StackPanel>
      <TextBlock Text="Game Over" FontSize="26" FontWeight="Bold"/>
      <TextBlock x:Name="Msg" Margin="0,10,0,0"/>
      <Button Content="Đóng" Margin="0,12,0,0" Click="Close_Click"/>
    </StackPanel>
  </Grid>
</Window>
